NODE_ENV=production
PORT=10000

# Security (REQUIRED - Must be strong random string)
JWT_SECRET=your-very-long-random-secret-key-here-minimum-32-characters

# DeepSeek AI Configuration (REQUIRED)
DEEPSEEK_API_KEY=sk-8174e5d48a034c5599707473026fcc8b

