# Client Management
MAX_MESSAGES_PER_CLIENT=50
CLIENT_GREETING_TIMEOUT_HOURS=5

# AI Configuration
AI_RESPONSE_TIMEOUT_MS=15000
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7
AI_MODEL=deepseek-chat

# Backup Configuration
BACKUP_ENABLED=true
